<%
const {user, portfolio, avatarPath} = locals;
%>

<section class="container">
    <div class="m-4">
        <h2>Portfolio Editor</h2>

    </div>

    <div>
        <%if (!portfolio) { %>
            <button class="btn btn-primary"><a href="/portfolio?_method=POST">Create Portfolio</a></button>
        <% } else { %>

            <% portfolio.assets.forEach(asset => { %>
                <h3><%=asset.meta.title%></h3>
            <% }); %>

            <!-- Create new asset -->
            <h3>New Track</h3>
            <form class="container-lg" method="post" action="/portfolio/asset" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="form-label" for="title">Title</label>
                    <input id="title" type="text" class="form-control" name="title" required>
                </div>
                <div id="cover-image-form-container">
                    <div id="cover-image-container">
                        <img alt="Asset cover image" id="cover-image" src="<%=avatarPath%>"/>
                    </div>
                    <div id="upload-file-container">
                        <div>
                            <label class="form-label" for="imageFile">Cover Image</label>
                            <input class="form-control" type="file" id="imageFile" name="imageUpload" accept=".jpeg,.jpg,.png"/>
                        </div>
                       <div>
                           <label class="form-label" for="audioFile">Audio File</label>
                           <input class="form-control" type="file" id="audioFile" name="audioUpload" accept=".wav,.mp3,.ogg" required>
                       </div>
                    </div>
                </div>

                <div class="audio-player mb-4">
                    <div class="play-button-container">
                        <div class="play-button">
                            <img src="/images/feather/play.svg" />
                        </div>
                    </div>
                    <div class="audio-region">
                        <canvas></canvas>
                    </div>
                </div>

                <h4>Credits</h4>
                <div id="credits" class="form-control">
                    <div class="btn-group-sm">
                        <button id="remove-credit" class="float-end btn btn-light" type="button">-</button>
                        <button id="add-credit" class="float-end btn btn-light" type="button">+</button>
                    </div>

                    <div>
                        <label>Name<input class="form-control" type="text" name="credits-name" value="<%=user.firstName + " " + user.lastName%>"/></label>
                        <label>Role<input class="form-control" type="text" name="credits-role" value="Artist"/></label>
                    </div>

                </div>

                <input name="type" type="text" hidden required value="Audio" readonly/>

                <input type="submit" class="btn btn-primary" value="Add New Track">


            </form>

            <h2>Tracks in Portfolio</h2>
            <% portfolio.assets.forEach(asset => { %>
                    <div class="audio-player mb-4" data-asset="<%=asset.file.path%>">
                        <div class="play-button-container">
                            <div class="play-button">
                                <img src="/images/feather/play.svg" />
                            </div>
                        </div>
                        <div class="audio-region">
                            <canvas></canvas>
                        </div>
                    </div>
            <% }); %>
        <% } %>
    </div>

</section>